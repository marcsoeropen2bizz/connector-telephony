<odoo>
    <!-- remove button from crm.lead and add click2dial button -->

    <record id="crm_phone_button" model="ir.ui.view">
        <field name="name">crm.phone.button</field>
        <field name="model">crm.lead</field>
        <field name="inherit_id" ref="crm.crm_lead_view_form" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='phone']" position="attributes">
                <attribute name="widget"></attribute>
            </xpath>
            <xpath expr="//field[@name='phone']" position="after">
                <div class="call_button">
                    <button type="object" name="clickToDial" string="Call">
                        <div class="fa fa-phone" title="phone"></div>
                    </button>
                </div>
            </xpath>
        </field>
    </record>
</odoo>